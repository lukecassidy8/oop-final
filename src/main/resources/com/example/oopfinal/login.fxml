<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oopfinal.LoginController">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="900.0" prefWidth="900.0" style="-fx-background-color: #000000;">
            <children>
                <Button fx:id="btnLogin" layoutX="160.0" layoutY="568.0" mnemonicParsing="false" onAction="#login" prefHeight="42.0" prefWidth="580.0" style="-fx-background-color: #1e90ff;" text="Login" />
                <Label alignment="CENTER" layoutX="1.0" layoutY="243.0" prefHeight="47.0" prefWidth="900.0" text="Welcome to the Library System" textFill="WHITE">
                    <font>
                        <Font size="32.0" />
                    </font>
                </Label>
                <Label alignment="CENTER" layoutY="362.0" prefWidth="900.0" text="Username" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font></Label>
                <Label alignment="CENTER" layoutY="462.0" prefWidth="900.0" text="Password" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font></Label>
                <Button fx:id="btnCancel" layoutX="400.0" layoutY="738.0" mnemonicParsing="false" onAction="#cancel" prefHeight="42.0" prefWidth="100.0" style="-fx-background-color: #ffffff;" text="Cancel">
               <font>
                  <Font name="Helvetica Bold" size="12.0" />
               </font></Button>
                <TextField fx:id="usernameTextField" layoutX="160.0" layoutY="394.0" prefHeight="42.0" prefWidth="580.0" promptText="Username" />
                <Label fx:id="loginMessageLabel" alignment="CENTER" layoutX="-1.0" layoutY="520.0" prefHeight="17.0" prefWidth="980.0" textFill="WHITE" />
            <Button fx:id="btnLoadRegister" layoutX="160.0" layoutY="668.0" mnemonicParsing="false" onAction="#loadRegister" prefHeight="42.0" prefWidth="580.0" style="-fx-background-color: #ffffff;" text="Sign Up">
               <font>
                  <Font name="Helvetica Bold" size="12.0" />
               </font></Button>
            <PasswordField fx:id="passwordTextField" layoutX="160.0" layoutY="494.0" prefHeight="42.0" prefWidth="580.0" promptText="Password" />
            <Label alignment="CENTER" layoutY="290.0" prefHeight="27.0" prefWidth="900.0" text="Log in or sign up to continue." textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label alignment="CENTER" layoutY="632.0" prefHeight="17.0" prefWidth="900.0" text="Or" textFill="WHITE">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Line endX="100.0" layoutX="333.0" layoutY="642.0" startX="-172.0" stroke="WHITE" />
            <Line endX="100.0" layoutX="642.0" layoutY="643.0" startX="-172.0" stroke="WHITE" />
            <ImageView fx:id="imageViewLogo" fitHeight="250.0" fitWidth="250.0" layoutX="325.0" layoutY="6.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../../../../library%20system%20logo%20new.png" />
               </image>
            </ImageView>
            </children>
        </AnchorPane>
    </children>
</GridPane>
